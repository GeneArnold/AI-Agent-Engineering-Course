# AI Agent Engineering Training - Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git (it's in .gitignore)

# OpenAI Configuration (for hosted models)
OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL=gpt-4o-mini  # or gpt-4, gpt-3.5-turbo, etc.
OPENAI_ORG_ID=  # Optional: your org ID

# Local Model Configuration (Ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b  # or mistral, codellama, etc.

# Model Provider Selection
# Options: "openai", "ollama", "huggingface"
MODEL_PROVIDER=openai

# Agent Configuration
MAX_AGENT_STEPS=10         # Prevent runaway loops
MAX_COST_DOLLARS=1.00      # Budget gate for hosted models
TEMPERATURE=0.7            # Creativity vs determinism (0.0 - 1.0)
LOG_LEVEL=INFO             # DEBUG, INFO, WARNING, ERROR

# Vector Store Configuration (Module 2)
CHROMA_PERSIST_DIR=./module_2_memory/chroma_db
EMBEDDING_MODEL=text-embedding-3-small  # OpenAI embedding model
# EMBEDDING_MODEL=all-MiniLM-L6-v2       # Local alternative

# MCP Configuration (Module MCP)
MCP_GATEWAY_URL=http://localhost:3000
MCP_GATEWAY_TOKEN=  # Optional: if using authenticated gateway

# Development
DEBUG=false
LOG_TO_FILE=true
LOG_DIR=./logs
